<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="391dp"
        android:layout_height="79dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geologica_bold"
                android:text="Корзина"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"

                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="107dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_goods_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geologica_bold"
                    android:padding="2dp"
                    android:text="· 0 товаров"
                    android:textColor="#4D4D4D"
                    android:textSize="12sp"

                    tools:layout_editor_absoluteX="73dp"
                    tools:layout_editor_absoluteY="135dp" />


                <Space
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/rubles_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geologica_bold"
                    android:padding="2dp"
                    android:text="· 0 ₽ "
                    android:textColor="#4D4D4D"
                    android:textSize="12sp"

                    tools:layout_editor_absoluteX="167dp"
                    tools:layout_editor_absoluteY="135dp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/clear_all_button"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/clear_button_shape"
            android:fontFamily="@font/geologica_bold"
            android:text="Очистить всё"
            android:textColor="#4D4D4D"
            android:textSize="14sp"
            app:backgroundTint="@null"

            tools:layout_editor_absoluteX="238dp"
            tools:layout_editor_absoluteY="103dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="403dp"
        android:layout_height="437dp"
        android:layout_marginBottom="128dp"
        android:layout_weight="1"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom"
        android:background="@drawable/button_shape"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.529">

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Главная"
            android:drawableTop="@raw/cart_button_main" />

        <Button
            android:id="@+id/button_catalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Каталог"
            android:drawableTop="@raw/cart_button_catalogue" />

        <Button
            android:id="@+id/button_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Корзина"
            android:drawableTop="@raw/cart_button_bucket" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Профиль"
            android:drawableTop="@raw/cart_button_profile" />

        <Button
            android:id="@+id/button_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Действия"
            android:drawableTop="@raw/cart_button_actions" />

    </LinearLayout>

    <TextView
        android:id="@+id/number_goods"
        android:layout_width="371dp"
        android:layout_height="53dp"
        android:layout_margin="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/clear_button_shape"
        android:fontFamily="@font/geologica_medium"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Товары (0)"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="359dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="380dp"
        android:background="@drawable/total_sum_shape"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_goods">

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="0.0 р."
            android:textColor="@color/blue_back"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_checkout"
            android:text="Войти и оформить"
            app:backgroundTint="@null" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>